<h1>My tasks</h1>
<ul>
<% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %> Â·
    <em><%= link_to 'delete', task_path(task),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></em> <i class="far fa-trash-alt"></i>
  </li>
<% end %>
</ul>
<hr>
<%= link_to new_task_path do %>
  <i class="fas fa-plus"></i> Add a new task
<% end %>
